{
  "name": "electron-menubar-app",
  "version": "1.0.0",
  "description": "Electron React TypeScript Menubar App",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build-main && npm run build-renderer",
    "dev": "concurrently \"npm run build-main:watch\" \"npm run build-renderer:watch\" \"wait-on dist/main.js && electron .\"",
    "start": "electron .",
    "build-renderer": "webpack --mode production",
    "build-renderer:watch": "webpack --mode development --watch",
    "build-main": "tsc --project tsconfig.main.json",
    "build-main:watch": "tsc --project tsconfig.main.json --watch"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "menubar"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^25.0.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "typescript": "^5.1.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "lucide-react": "^0.525.0",
    "menubar": "^9.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
