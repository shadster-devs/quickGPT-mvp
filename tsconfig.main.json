{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "baseUrl": "./src"
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/modules/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "node_modules",
    "dist"
  ]
} 